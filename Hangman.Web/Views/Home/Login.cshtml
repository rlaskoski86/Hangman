@using Hangman.Web.Models
@model UserViewModel
<body>
    <div>
        <img src="~/images/gallows.jpg" style="width: 350px; margin-bottom: 20px; margin-top: 10px;">
    </div>
    <div class="container" style="margin-top: 10px">
        <div class="page-content-wrap">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Login" method="post">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h1>Hangman - Let's Play!!!</h1>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="control-label">User:</label>
                                    </div>
                                    <div class="col-md-10">
                                        <input asp-for="User" id="txtUser" class="form-control" />
                                        <span asp-validation-for="User"></span>
                                    </div>

                                </div>
                            </div>
                            <input type="submit" class="btn btn-primary" id="btnLogin" name="login" value="Login" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>
